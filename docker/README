
# step 1: or use docker-compose container
docker run -v "$(pwd)":"$(pwd)" \
             -v /var/run/docker.sock:/var/run/docker.sock \
             -e COMPOSE_PROJECT_NAME=$(basename "$(pwd)") \
             --workdir="$(pwd)" \
             -ti --rm \
             dduportal/docker-compose:latest up -d


# 全局初始化
docker run --rm -it -v $(pwd):/app composer/composer:1.1 global require "fxp/composer-asset-plugin:^1.2.0"
run --rm -v $(pwd):/app composer/composer install
#创建base任务
docker run --rm -it -v $(pwd):/app composer/composer:1.1 create-project --prefer-dist yiisoft/yii2-app-basic basic